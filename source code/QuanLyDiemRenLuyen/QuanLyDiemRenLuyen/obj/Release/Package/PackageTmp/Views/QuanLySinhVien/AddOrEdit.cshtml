@model QuanLyDiemRenLuyen.Models.SINHVIEN

@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "QuanLySinhVien", FormMethod.Post, new { enctype = "multipart/form-data", onSubmit = "return jQueryAjaxPost(this);", data_restUrl = Url.Action("AddOrEdit", "QuanLySinhVien", new { id = 0 }) }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.ID)


            <div class="col-md-6">
                <div class="form-group">
                    <label style="text-align: left; width:200px" class="control-label col-md-2">Mã Sinh Viên</label>

                    <div style="margin-left:110px; margin-top:-25px;" class="col-md-10">
                        @Html.EditorFor(model => model.PK_sMaSVID, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PK_sMaSVID)
                    </div>
                </div>
                <div class="form-group">
                    <label style="text-align: left; width:200px" class="control-label col-md-2">Tên Sinh Viên</label>

                    <div style="margin-left:110px; margin-top:-25px;" class="col-md-10">
                        @Html.EditorFor(model => model.sTenSV, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.sTenSV)
                    </div>
                </div>

                <div class="form-group">
                    <label style="text-align: left; width:115px;" class="control-label col-md-2">Ngày Sinh</label>
                    <div style="margin-left:110px; margin-top:-25px; "class="col-md-10">
                        @Html.EditorFor(model => model.dNgaysinh, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.dNgaysinh)
                    </div>
                </div>

                <div class="form-group">
                    <label style="text-align: left; width:115px;" class="control-label col-md-2">Chức Vụ</label>
                    <div style="margin-left:110px; margin-top:-25px;"class="col-md-10">
                        @Html.EditorFor(model => model.sChucvu, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.sChucvu)
                    </div>
                </div>

                <div class="form-group">
                    <label style="text-align: left; width:115px;" class="control-label col-md-2">Giới Tính</label>
                    <div style="margin-left:110px; margin-top:-25px;" class="col-md-10">
                        @Html.EditorFor(model => model.sGioitinh, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.sGioitinh)
                    </div>
                </div>
                <div class="form-group">
                    <label style="text-align: left; width:115px;" class="control-label col-md-2">Quên Quán</label>
                    <div style="margin-left:110px; margin-top:-25px;"class="col-md-10">
                        @Html.EditorFor(model => model.sQuequan, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.sQuequan)
                    </div>
                </div>
                <div class="form-group">
                    <label style="text-align: left; width:115px;" class="control-label col-md-2">Lớp</label>
                    <div style="margin-left:110px; margin-top:-25px;" class="col-md-10">
                        @Html.EditorFor(model => model.FK_sMaLopID, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FK_sMaLopID)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Xác nhận" class="btn btn-default" />
                        @if (Model.ID != 0)
                        {
                            <a class="btn btn-success" onclick="refreshAddNewTab('@Url.Action("AddOrEdit","QuanLySinhVien",new{id=0})',false)"><i class="fa fa-plus"></i>Thêm mới</a>
                        }
                    </div>
                </div>


            </div>
        </div>
    </div>

}

